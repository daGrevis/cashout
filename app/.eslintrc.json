{
    "parser": "babel-eslint",
    "rules": {
        "indent": [2, 4],
        "quotes": [2, "double"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "never"],
        "comma-dangle": [2, "always-multiline"],
        "no-console": 0
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "experimentalObjectRestSpread": true
    },
    "plugins": [
        "react"
    ],
    "globals": {
        "L": true,
        "PhoneGap": true,
        "module": true,
        "process": true,
        "require": true
    }
}
